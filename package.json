{
  "name": "jp-weld",
  "version": "0.1.7.1",
  "description": "jp-weld is a miniature web compiler, allowing a component based web app architecture.",
  "main": "weld.js",
  "type": "module",
  "scripts": {
    "init": "node weld.js -- init",
    "build": "node weld.js -- build",
    "tsdev": "tsc -w",
    "jsdev": "npx nodemon --ignore src/ --ignore dist/ --ignore ts/ --verbose --delay 2.5 weld.js -- dev"
  },
  "bin": {
    "weld": "./weld.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonatanpetersson/weld.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jonatanpetersson/weld/issues"
  },
  "homepage": "https://github.com/jonatanpetersson/weld",
  "devDependencies": {
    "@types/node": "^17.0.24",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  }
}
